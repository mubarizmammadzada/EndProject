@model ProductVM
@{
    ViewData["Title"] = "Detail";
}

<main>
    <section id="shopDetailName">
        <div class="container">
            <div class="row">
                <h3>FLYING NINJA</h3>
            </div>
        </div>
    </section>
    <section id="shopDetail">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-12 col-sm-12 col-12 leftSideShopDetail">
                    <div class="col-lg-7 col-md-12 col-sm-12 col-12 imagesShopDetail">
                        <img class="img-fluid" src="~/img/shop/@Model.ProductImages.FirstOrDefault(p=>p.IsMain==true).Image" alt="">

                        <div class="col-6 downImgShopDetail">
                            <img class="img-fluid" src="~/img/shop/@Model.ProductImages.FirstOrDefault(p=>p.IsMain==true).Image" alt="">
                        </div>
                        <div class="col-6 downImgShopDetail">
                            <img class="img-fluid" src="~/img/shop/@Model.ProductImages.FirstOrDefault(p=>p.IsMain==false).Image" alt="">
                        </div>


                    </div>
                    <div class="col-lg-5 col-md-12 col-sm-12 col-12 shoppingElementAbout" data-id="10">
                        <h3>@Model.Productt.Name</h3>
                        <p id="elementPrice">$@Model.Productt.Price.00</p>
                        <hr>
                        <p>
                            @Model.Productt.About
                        </p>
                        <hr>
                        <ul>
                            <li><i class="fas fa-minus minus"></i></li>
                            <li id="liCount">0</li>
                            <li><i class="fas fa-plus plus"></i></li>
                        </ul>

                        <a href="#" class="btn btn-primary addToCartDetail" style="float: left;">ADD TO CART</a>


                    </div>
                </div>
                <div class="col-lg-3 col-md-12 col-sm-12 col-12 shoipDetailRightSide">
                    <h6>PRODUCT CATEGORIES</h6>
                    <hr>
                    <ul>
                        @foreach (ProductCategory category in @Model.ProductCategories)
                        {
                            <li><a href="#">@category.Name</a></li>
                        }

                    </ul>

                </div>
                <div class="col-lg-9 col-md-12 col-sm-12 col-12 shopDetailRelatedElements">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                        <h3>RELATED PRODUCTS</h3>
                        <hr>
                        @foreach (Product product in Model.Products)
                        {
                            <div class="col-lg-4 col-md-6 col-sm-12 col-12 relatedElement" data-id="7">
                                <a href="#"><img class="img-fluid" src="~/img/shop/@product.ProductImages.FirstOrDefault(p=>p.IsMain==true).Image" alt=""></a>
                                <a href="#" class="relatedelementName w-100">
                                    <h4>@product.Name</h4>
                                </a>
                                <hr>
                                <p>$@product.Price.00</p>
                                <a href="#" class="btn btn-primary addToCart">ADD TO CART</a>

                            </div>
                        }

                    </div>
                </div>

            </div>
        </div>
    </section>
    <section id="shopDetailResponsive">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-12 col-sm-12 col-12 leftSideShopDetail">
