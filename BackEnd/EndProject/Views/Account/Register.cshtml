@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<main>
    <section id="registerWord">
        <div class="container">
            <div class="row">
                <h3>Register</h3>
            </div>
        </div>
    </section>
    <section id="register">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-12 registerForm">
                    <div asp-validation-summary="ModelOnly"></div>
                    <form method="post">
                        <input asp-for="FullName" class="form-control" placeholder="Fullname*">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                        <input asp-for="UserName" class="form-control" placeholder="Username*">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                        <input asp-for="Email" class="form-control" placeholder="Email*">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <input asp-for="Password" class="form-control showPassword" placeholder="Password*">
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <input asp-for="RepeatPassword" type="password" class="form-control showPassword" placeholder="Repeat Password*">
                        <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                        <input style="width:15px" type="checkbox" id="remember" />
                        <span>Show Password</span>
                        <button type="submit" class="btn btn-primary">SignUp</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            //CheckBox Show Password
            $('#remember').click(function () {
                $('.showPassword').attr('type', $(this).is(':checked') ? 'text' : 'password');
            });
        });
    </script>
}

