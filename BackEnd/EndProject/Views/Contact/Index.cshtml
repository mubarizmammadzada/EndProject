@model ContactVM
@{
    ViewData["Title"] = "Index";
}

<main>
    <section>
        <div class="container-fluid">
            <div class="row">
                <div class="mapouter">
                    <div class="gmap_canvas">
                        <iframe width="600" height="500" id="gmap_canvas"
                                src="https://maps.google.com/maps?q=naximov&t=&z=13&ie=UTF8&iwloc=&output=embed"
                                frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://2torrentz.net">torrentz file search</a>
                    </div>
                    <style>
                        .mapouter {
                            position: relative;
                            text-align: right;
                            height: 500px;
                            width: 100% !important;
                        }

                        .gmap_canvas {
                            overflow: hidden;
                            background: none !important;
                            height: 500px;
                            width: 100% !important;
                        }
                    </style>
                    <style>
                        iframe {
                            width: 100%;
                            height: 100%;
                        }
                    </style>
                </div>
            </div>
        </div>
    </section>
    <section id="contactInform">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-12 col-12">
                    <h5>CALL US NOW AT</h5>
                    <div id="informContact">
                        <i class="fas fa-phone-alt"></i>
                        <ul>
                            <li>
                                Mobile: <span>@Model.Bio.PhoneNumber</span>
                            </li>
                            <li>
                                Assistance: <span>@Model.Bio.AsistancePhoneNumber</span>
                            </li>
                            <li>
                                Weekdays: <span>@Model.Bio.AsistancePhoneNumber</span>
                            </li>
                        </ul>
                    </div>

                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-12">
                    <h5>TUCSON CAR SERVICE</h5>
                    <div id="informContact">
                        <i class="fas fa-map-marked-alt"></i>
                        <span>
                            @Model.Bio.Address
                        </span>
                    </div>

                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-12">
                    <h5>24/7 ASSISTANCE</h5>
                    <div id="informContact">
                        <i class="fas fa-truck-moving"></i>
                        <span>
                            Services consequat luctus at justo auctor metus est donec. Tempus terminal morbi nulla
                            donec elite maecenas.
                        </span>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <section id="contactReply">
        <div class="container">
            <div class="row">
                <form method="post" class="col-lg-12 col-md-12 col-sm-12 col-12 form-group w-100 ">
                    <div class="contactLiveReply">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-12 inputs">
                            <input asp-for="Name" class="form-controll w-100" placeholder="Your Name*">
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <input asp-for="Email" class="form-controll w-100" placeholder="Your Email*">
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <input asp-for="PhoneNumber" class="form-controll w-100" placeholder="Your Phone*">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-12 text">
                            <textarea asp-for="MessageText" placeholder="Message*"></textarea>
                        </div>
                        <span asp-validation-for="MessageText" class="text-danger"></span>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-12 replyBtn">
                        <button type="submit" class="btn btn-primary messageBtn">SEND MESSAGE</button>
                    </div>

                </form>

            </div>
        </div>
    </section>
</main>
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

}
