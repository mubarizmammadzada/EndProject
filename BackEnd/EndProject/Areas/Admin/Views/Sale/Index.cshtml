@model IEnumerable<Sale>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider Table</h4>
                <div class="table-responsive">
                    <table class="table table-striped">

                        <thead>
                            <tr>
                                <th >
                                    Full Name
                                </th>
                                <th class="date">
                                    Date 
                                </th>
                                <th>
                                    Total
                                </th>
                                <th>
                                    Setting
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Sale sale in Model)
                            {
                            <tr>

                                @if (sale.FullName.Length < 16)
                                {
                                    <td>
                                        @sale.FullName
                                    </td>
                                }
                                else
                                {
                                    <td class="serviceName">@sale.FullName.Substring(0, 16)...</td>
                                }
                                <td class="date">
                                    @sale.Date.ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    @sale.Total$
                                </td>
                                <td>
                                    <a asp-controller="Sale" asp-action="Detail" asp-route-id="@sale.Id" class="btn btn-primary "><i class="mdi mdi-table-edit"></i></a>
                                    
                                </td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

