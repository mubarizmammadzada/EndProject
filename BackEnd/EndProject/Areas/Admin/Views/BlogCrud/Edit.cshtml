@model BlogCrudVM
@{
    ViewData["Title"] = "Edit";
}

@section Css{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
}
<div asp-validation-summary="ModelOnly" class="alert-danger"></div>
<form method="post" enctype="multipart/form-data">
    <div class="mt-3">
        <input asp-for="Blog.Photo" class="form-control" />
        <span asp-validation-for="Blog.Photo"></span>
    </div>
    <div class="mt-3">
        <span>Name</span>
        <input asp-for="Blog.Name" placeholder="Name*" class="form-control" />
        <span asp-validation-for="Blog.Name"></span>
    </div>
    <div class="mt-3">
        <span>Name</span>
        <input asp-for="Blog.AboutBlog" placeholder="About*" class="form-control" />
        <span asp-validation-for="Blog.AboutBlog"></span>
    </div>
    <div class="mt-3">
        <span>Author Name</span>
        <input asp-for="Blog.AuthorName" placeholder="Author Name*" class="form-control" />
        <span asp-validation-for="Blog.AuthorName"></span>
    </div>
    <div class="mt-3">
        <span>Date</span>
        <input asp-for="Blog.Date" placeholder="Date*" class="form-control" />
        <span asp-validation-for="Blog.Date"></span>
    </div>
    <div class="mt-3">
        <span>Description</span>
        <input asp-for="Blog.Description" placeholder="Description*" class="form-control" />
        <span asp-validation-for="Blog.Description"></span>
    </div>
    <div class="mt-3">
        <select class="form-control" id="selectCategory" name="categories">
            @foreach (BlogCategory category in Model.BlogCategories)
            {
                <option value="@category.Name">@category.Name</option>
            }

        </select>
    </div>
    <button type="submit" class="btn btn-success mt-5">Create Blog</button>

</form>
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <script>
        $('.js-example-basic-multiple').select2();
    </script>

}

