@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Product Table</h4>
                <div class="table-responsive">
                    <a asp-controller="ProductCrud" asp-action="Create" class="btn btn-github mt-3">Create Product</a>
                    <table class="table table-striped">

                        <thead>
                            <tr>
                                <th class="image">
                                    Image
                                </th>
                                <th>Product Name</th>
                                <th>
                                    Setting
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Product product in Model)
                            {
                                <tr>
                                    <td class="py-1 image">
                                        @if (@product.ProductImages.FirstOrDefault(p => p.IsMain == true) != null)
                                        {

                                            <img style="width:150px !important;height:90px !important ;border-radius:0;" src="~/img/shop/@product.ProductImages.FirstOrDefault(p=>p.IsMain==true).Image" alt="image" />

                                        }
                                    </td>

                                    @if (product.Name.Length < 16)
                                    {
                                        <td class="serviceName">@product.Name</td>
                                    }
                                    else
                                    {
                                        <td class="serviceName">@product.Name.Substring(0, 16)...</td>
                                    }

                                    <td>
                                        <a asp-controller="ProductCrud" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary "><i class="mdi mdi-table-edit"></i></a>
                                        <a asp-controller="ProductCrud" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
